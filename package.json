{
  "name": "vanillafilter",
  "version": "0.0.0-development",
  "description": "Filter a selection of elements by defining a trigger and target(s)",
  "main": "./dist/js/vanillafilter.min.js",
  "scripts": {
    "commit": "git-cz",
    "test": "istanbul cover -x *.test.js _mocha -- test/index.tests.js -R spec -r jsdom-global/register",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dverleg/vanillafilter.git"
  },
  "keywords": [
    "filter",
    "elements",
    "javascript",
    "vanilla",
    "vanillajs"
  ],
  "author": "Dennis Verleg (http://veritus.nl/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dverleg/vanillafilter/issues"
  },
  "homepage": "https://github.com/dverleg/vanillafilter#readme",
  "devDependencies": {
    "chai": "3.5.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "ghooks": "2.0.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean": "^0.4.0",
    "gulp-imagemin": "^3.2.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-uglify": "^3.0.2",
    "gulp-util": "^3.0.8",
    "imagemin-pngquant": "^5.0.0",
    "istanbul": "0.4.5",
    "jsdom": "16.5.0",
    "jsdom-global": "3.0.2",
    "mocha": "3.4.1",
    "run-sequence": "^2.2.1",
    "semantic-release": "^6.3.6",
    "sinon": "^2.3.1",
    "sinon-chai": "^2.10.0"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
}
